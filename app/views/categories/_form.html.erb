<%= form_for @category do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :daily_rate %>
  <%= f.number_field :daily_rate %>

  <%= f.label :third_party_insurance %>
  <%= f.number_field :third_party_insurance %>

  <%= f.label :car_insurance %>
  <%= f.number_field :car_insurance %>

  <%= f.submit 'Enviar' %>
<% end %>